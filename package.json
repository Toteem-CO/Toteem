{
  "name": "toteem",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "description": "Toteem",
  "author": "Toteem CO",
  "engines": {
    "node": "18.10.0",
    "pnpm": "7.13.2"
  },
  "scripts": {
    "test": "pnpm --filter $PACKAGE_NAME --filter =@toteem/shared run test",
    "start": "pnpm --filter $PACKAGE_NAME run start",
    "build": "pnpm --filter $PACKAGE_NAME run build",
    "clean:modules": "rm -rf node_modules ./packages/api/node_modules ./packages/client/node_modules ./packages/shared/node_modules",
    "clean:client": "rm -rf ./packages/client/.nuxt ./packages/client/.output ./packages/client/dist",
    "clean:everything": "pnpm run clean:modules && pnpm run clean:client",
    "clean:apocalypse": "pnpm run clean:everything && rm -rf pnpm-lock.yaml",
    "dev:api": "pnpm --filter @toteem/api run dev",
    "dev:client": "pnpm --filter @toteem/client dev",
    "build:api": "yarn workspace @toteem/api run build",
    "build:client": "pnpm --filter @toteem/client run build",
    "start:api": "yarn workspace @toteem/api run start",
    "start:client": "npm run start --workspace=@toteem/client"
  }
}